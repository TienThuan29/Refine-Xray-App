# CliniSearch API Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Google API Key for Gemini AI
GOOGLE_API_KEY=your_google_api_key_here

# Required: NCBI Email for PubMed searches
NCBI_EMAIL=your_email@example.com

# Optional: Anthropic API Key for Claude AI (if using Claude features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Database configuration (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/clinisearch

# Optional: Redis configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# Optional: Logging level
# LOG_LEVEL=INFO

# Optional: API configuration
# API_HOST=0.0.0.0
# API_PORT=8000
# API_WORKERS=1
